<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".fragment.HomeFragment">


    <ImageView
        android:id="@+id/practice_image"
        android:layout_width="189dp"
        android:layout_height="193dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:src="@color/lavender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/diary_image"
        android:layout_width="188dp"
        android:layout_height="210dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:src="@color/lavender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toEndOf="@+id/textDiary" />

    <ImageView
        android:id="@+id/motivation_image"
        android:layout_width="167dp"
        android:layout_height="201dp"
        android:layout_marginBottom="228dp"
        android:src="@color/lavender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_motivation"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/emotion_one"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="48dp"
        android:src="@color/lavender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/emotion_two"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="12dp"
        android:src="@color/lavender"
        app:layout_constraintEnd_toStartOf="@+id/emotion_three"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/emotion_three"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="104dp"
        android:src="@color/lavender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_motivation"
        android:layout_width="188dp"
        android:layout_height="153dp"
        android:layout_marginBottom="16dp"
        android:text="@string/motivation_text"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        android:textStyle="bold"
        app:drawableTint="@color/sky"
        app:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toTopOf="@+id/diary_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_practice"
        android:layout_width="173dp"
        android:layout_height="126dp"
        android:layout_marginTop="144dp"
        android:text="@string/practice_text"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        android:textStyle="bold"
        app:drawableTint="@color/sky"
        app:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toStartOf="@+id/practice_image"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDiary"
        android:layout_width="159dp"
        android:layout_height="178dp"
        android:text="@string/diary_text"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        android:textStyle="bold"
        app:drawableTint="@color/sky"
        app:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motivation_image"
        app:layout_constraintVertical_bias="0.523" />

    <TextView
        android:id="@+id/emotion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:text="Выбери свое настроение сегодня"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
