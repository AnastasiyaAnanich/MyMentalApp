<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="1dp"
    android:layout_marginVertical="1dp"
    app:cardBackgroundColor="#DDD0C3F7"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/diary_text_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toStartOf="@id/diary_Delete_remote"
            android:padding="4dp"
            android:text="Дневник"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/diary_editTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/diary_text_head"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@id/diary_Delete_remote"
            android:padding="4dp"
            android:text="последнее изменение"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/diary_Delete_remote"
            android:layout_width="34dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="3dp"
            android:padding="3dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>